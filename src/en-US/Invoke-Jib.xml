    <command:details>
      <command:name>Invoke-Jib</command:name>
      <command:verb>Invoke</command:verb>
      <command:noun>Jib</command:noun>
      <maml:description>
        <maml:para>Provides a CLI with convenient methods for interacting with the Docker container running a Laravel Application.</maml:para>
      </maml:description>
    </command:details>
    <maml:description>
      <maml:para>Jib is a PowerShell implementation of Laravel Sail.</maml:para>
      <maml:para>Laravel Sail is a light-weight command-line interface for interacting with Laravel's default Docker development environment.</maml:para>
      <maml:para>Sail provides a great starting point for building a Laravel application using PHP, MySQL, and Redis without requiring prior Docker experience.</maml:para>
    </maml:description>
    <command:syntax>
      <command:syntaxItem>
        <maml:name>Invoke-Jib</maml:name>
        <command:parameter required="true" variableLength="true" globbing="false" pipelineInput="False" position="named" aliases="none">
          <maml:name>Action</maml:name>
          <maml:description>
            <maml:para>The Sail command to run</maml:para>
          </maml:description>
          <command:parameterValue required="true" variableLength="false">String</command:parameterValue>
          <dev:type>
            <maml:name>String</maml:name>
            <maml:uri />
          </dev:type>
          <dev:defaultValue>None</dev:defaultValue>
        </command:parameter>
        <command:parameter required="false" variableLength="true" globbing="false" pipelineInput="False" position="named" aliases="none">
          <maml:name>d</maml:name>
          <maml:description>
            <maml:para>If the Sail command should be run in the background. Usefull with 'up'.</maml:para>
          </maml:description>
          <dev:type>
            <maml:name>SwitchParameter</maml:name>
            <maml:uri />
          </dev:type>
          <dev:defaultValue>False</dev:defaultValue>
        </command:parameter>
      </command:syntaxItem>
    </command:syntax>
